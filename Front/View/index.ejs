<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Estudiantes</title>
</head>
<body>
  <h1>Lista de Estudiantes</h1>
  <a href="/crear">Agregar Nuevo Estudiante</a>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Edad</th>
        <th>Carrera</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% estudiantes.forEach(est => { %>
        <tr>
          <td><%= est.id %></td>
          <td><%= est.nombre %></td>
          <td><%= est.edad %></td>
          <td><%= est.carrera %></td>
          <td>
            <a href="/editar/<%= est.id %>">Editar</a>
            <form action="/eliminar/<%= est.id %>" method="POST" style="display:inline;">
              <button type="submit">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
